{{ 'new-blog.css' | asset_url | stylesheet_tag }}

<style>
    .secnd-div{
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .new-blog {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  @media screen and (max-width: 750px) {
    .new-blog {
        margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
        margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .new-blog {
        margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
        margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
    }
  }

</style>


<section class="new-blog">
    {% if section.settings.home_page_blog_banner != null %}
    {% render 'image', imageSrc: section.settings.home_page_blog_banner, classes: 'home-page-blog-banner' %}
    {%else %}
   {{ 'lifestyle-1' | placeholder_svg_tag: 'home-page-blog-banner' }}
   {% endif %}
   <div class="hm-blg-overlay"> &nbsp; </div>
    <div class="page-width section-inner-gap">
        <h2 class="section-title blg-sec-title sec-title-anim"> {{ section.settings.new_blg_title }} </h2>
        <div class="blg-container">
            <div class="first-div">
                <div class="blog-div">
                    <a href="{{ section.settings.left_article.url }}" class="blog-anchr">&nbsp;</a>
                     {% comment %} <a class="blg-anchor-wrap" href="{{ section.settings.left_article.url }}" aria-label="link" > &nbsp; </a> {% endcomment %}
                    <div class="new-blog-text">
                      
                        <p class=" section-sub feat-blog-title">{{ section.settings.left_article.title }}</p>
                         <p class="section-sub feat-blog-sub content-overflow">{{ section.settings.left_article.content | strip_html | truncatewords: 20 }}</p>
                        
                        <div class="date-auth content-overflow">
                            <p> {{ section.settings.left_article.author }} </p>
                            <h4 class="article-create">{{ section.settings.left_article.published_at | time_tag: format: 'date' }}</h4>
                        </div>
                    </div>
                    <div>
                         <div class="new-blog-imgArea">
                            {% if section.settings.left_article.image !=null %}
                                {% render 'image', imageSrc: section.settings.left_article.image, classes: 'blg-lft-img' %}
                            {% else %}
                                {{ 'collection-3' | placeholder_svg_tag }}
                            {% endif %}
                        </div>
                        <a class="blg-btn" href="{{ section.settings.left_article.url }}" aria-label="Read more Link">Contine Reading {% render 'arr-right-cus' %} </a> 
                    </div>
                    
                </div>
            </div>
            <div class="secnd-blg-div">
                
                {% for item in section.blocks %}
                    <div class="sec-blog-item">
                        <a class="blg-anchor-wrap" href="{{ item.settings.blog.url }}"> &nbsp; </a> 
                        <div class="sec-blog-imgArea">
                        {% if item.settings.blog.image !=null %}
                            {% render 'image', imageSrc: item.settings.blog.image, classes: 'blg-lft-img' %}
                        {% else %}
                            {{ 'collection-2' | placeholder_svg_tag }}
                        {% endif %}
                        </div>
                        <div class="right-blog-text cat-content-anim">
                            <h3 class="blg-title">{{ item.settings.blog.title }}</h3>
                              
                            <div class="date-auth content-overflow">
                                <p> {{ section.settings.left_article.author }} </p>
                                <h4 class="article-create article-create-special">{{ section.settings.left_article.published_at | time_tag: format: 'date' }}</h4>
                                {% render 'arr-right-cus' %}
                            </div>
                            
                        </div>
                    </div>
                {% endfor %}
                 <div class="vwblg-btn">
                    <a class="btn btn-primary abt-btn" href="">VIEW ALL BLOG</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="sml-screen section-inner-gap">
    {% if section.settings.home_page_blog_banner != null %}
        {% render 'image', imageSrc: section.settings.home_page_blog_banner, classes: 'home-page-blog-banner' %}
    {%else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'home-page-blog-banner' }}
    {% endif %}
    <div class="hm-blg-overlay"> &nbsp; </div>
    <div class="page-width">
        <h2 class="section-title sm-blg-title"> {{ section.settings.new_blg_title }} </h2>
        <div class="sml-blg">
            <div class="sml-blg-item">
                <a class="blg-anchor-wrap" href="{{ section.settings.left_article.url }}"> &nbsp; </a>
                <div class="sml-blg-imgArea">
                    {% comment %} <img src="{{ item.settings.blog.image | img_url: 'large' }}" alt=""> {% endcomment %}
                    {% render 'image', imageSrc: section.settings.left_article.image, classes: 'blg-lft-img' %}
                </div>
                <div class="sml-blg-text">
                    <h4 class="article-create">{{ section.settings.left_article.published_at | time_tag: format: 'date' }}</h4>
                    <h3 class="blg-title">{{ section.settings.left_article.title }}</h3>
                    {% comment %} <p class="blg-content">{{ item.settings.blog.content | strip_html | truncatewords: 7 }}</p> {% endcomment %}
                    <a class="blg-btn" href="{{ section.settings.left_article.url }}" aria-label="Read more Link">Contine Reading {% render 'arr-right-cus' %} </a> 
                </div>
            </div>
            {% for item in section.blocks %}
                <div class="sml-blg-item">
                    <a class="blg-anchor-wrap" href="{{ item.settings.blog.url }}"> &nbsp; </a>
                    <div class="sml-blg-imgArea">
                        {% comment %} <img src="{{ item.settings.blog.image | img_url: 'large' }}" alt=""> {% endcomment %}
                        {% render 'image', imageSrc: item.settings.blog.image, classes: 'blg-lft-img' %}
                    </div>
                    <div class="sml-blg-text">
                        <h4 class="article-create">{{ item.settings.blog.published_at | time_tag: format: 'date' }}</h4>
                        <h3 class="blg-title">{{ item.settings.blog.title }}</h3>
                        {% comment %} <p class="blg-content">{{ item.settings.blog.content | strip_html | truncatewords: 7 }}</p> {% endcomment %}
                        <a class="blg-btn" href="{{ section.settings.left_article.url }}" aria-label="Read more Link">Contine Reading {% render 'arr-right-cus' %} </a> 
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="vwblg-btn sml-blg-btn">
            <a class="btn btn-primary abt-btn" href="">VIEW ALL BLOG</a>
        </div>
    </div>


</section>

{% schema %}
    {
        "name": "new-blog",
        "settings": [
            {
                "type": "text",
                "id": "new_blg_title",
                "label": "Section Title"
            },
            {
                "type": "article",
                "id": "left_article",
                "label": "Select a blog"
            },
            {
                "type": "header",
                "content": "Background Color"
            },
           
            {
                "type": "header",
                "content": "Section Margin"
            },
            {
                "type": "range",
                "id": "margin_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Top Margin",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Bottom Margin",
                "default": 0
            },
            {
                "type":"url",
                "id":"blog_url",
                "label":"URL"
            },
            {
                "type": "image_picker",
                "id": "home_page_blog_banner",
                "label": "Choose Background Image"
            }
        ],
        "max_blocks": 3,
        "blocks": [
            {
                "type": "text",
                 "name": "New Blog",
                "settings": [

                    {
                        "type": "article",
                        "id": "blog",
                        "label": "Select a article"   

                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "New Blog"
            }
        ]
    }
{% endschema %}
